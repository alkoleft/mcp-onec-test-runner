# MCP YaXUnit Runner - Пример файла переменных окружения
# Скопируйте этот файл в .env и настройте под ваши нужды

# Основные настройки приложения
SPRING_PROFILES_ACTIVE=prod
SPRING_APPLICATION_NAME=mcp-yaxunit-runner

# Настройки сервера
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/

# Настройки проекта
YAXUNIT_TESTS_PATH=/opt/yaxunit/tests
YAXUNIT_BUILD_TIMEOUT=180000
YAXUNIT_TEST_TIMEOUT=300000

# Настройки платформы 1С
YAXUNIT_PLATFORM_VERSION=
YAXUNIT_AUTO_DETECT=true
YAXUNIT_PLATFORM_PATHS=/opt/1cv8:/usr/local/1cv8

# Настройки информационной базы
IB_CONNECTION=File='/path/to/infobase';
IB_USER=admin
IB_PWD=

# Настройки сборки
YAXUNIT_INCREMENTAL_BUILD=true
YAXUNIT_HASH_STORAGE_SIZE=50000
YAXUNIT_PARALLEL_BUILD=true

# Настройки логирования
YAXUNIT_LOG_LEVEL=WARN
YAXUNIT_FILE_LOGGING=true
YAXUNIT_LOG_FILE=/var/log/yaxunit/app.log

# Настройки WebSocket
YAXUNIT_WEBSOCKET_ENABLED=true
YAXUNIT_WEBSOCKET_PATH=/yaxunit

# Настройки безопасности
SECURITY_ENABLED=false
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Настройки мониторинга
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# Настройки метрик
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false

# Настройки кэширования
CACHE_ENABLED=true
CACHE_TYPE=mapdb
CACHE_MAX_SIZE=100000
CACHE_TTL=7200000

# Настройки уведомлений
NOTIFICATIONS_ENABLED=false
WEBHOOK_URL=
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# Настройки отчетов
REPORTS_ENABLED=true
REPORTS_FORMAT=json
REPORTS_OUTPUT_DIR=/var/yaxunit/reports
REPORTS_INCLUDE_COVERAGE=true
REPORTS_INCLUDE_TIMING=true

# Настройки параллельного выполнения
PARALLEL_ENABLED=true
PARALLEL_MAX_THREADS=8
PARALLEL_QUEUE_SIZE=500

# Настройки таймаутов
TIMEOUT_CONNECTION=15000
TIMEOUT_READ=30000
TIMEOUT_WRITE=30000
TIMEOUT_PROCESS=180000

# Настройки резервного копирования
BACKUP_ENABLED=true
BACKUP_DIRECTORY=/var/yaxunit/backup
BACKUP_MAX_FILES=50
BACKUP_RETENTION_DAYS=90

# Настройки разработки
DEVELOPMENT_DEBUG=false
DEVELOPMENT_HOT_RELOAD=false
DEVELOPMENT_PROFILE=false

# Настройки для Docker
DOCKER_ENABLED=false
DOCKER_IMAGE=mcp-yaxunit-runner:latest
DOCKER_CONTAINER_NAME=mcp-yaxunit-runner

# Настройки для CI/CD
CI_ENABLED=false
CI_BUILD_TIMEOUT=300000
CI_TEST_TIMEOUT=600000
CI_PARALLEL_ENABLED=true
CI_PARALLEL_MAX_THREADS=4 