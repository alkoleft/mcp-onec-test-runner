{
  "mcpServers": {
    "yaxunit-runner": {
      "command": "java",
      "args": [
        "-jar",
        "mcp-yaxunit-runner.jar",
        "--spring.profiles.active=mcp"
      ],
      "env": {
        "YAXUNIT_TESTS_PATH": "./tests",
        "YAXUNIT_BUILD_TIMEOUT": "300000",
        "YAXUNIT_TEST_TIMEOUT": "600000",
        "YAXUNIT_LOG_LEVEL": "INFO",
        "YAXUNIT_AUTO_DETECT": "true"
      }
    },
    "yaxunit-runner-dev": {
      "command": "java",
      "args": [
        "-jar",
        "mcp-yaxunit-runner.jar",
        "--spring.profiles.active=mcp,dev"
      ],
      "env": {
        "YAXUNIT_TESTS_PATH": "./tests-dev",
        "YAXUNIT_BUILD_TIMEOUT": "600000",
        "YAXUNIT_TEST_TIMEOUT": "1200000",
        "YAXUNIT_LOG_LEVEL": "DEBUG",
        "YAXUNIT_AUTO_DETECT": "true"
      }
    },
    "yaxunit-runner-prod": {
      "command": "java",
      "args": [
        "-jar",
        "mcp-yaxunit-runner.jar",
        "--spring.profiles.active=mcp,prod"
      ],
      "env": {
        "YAXUNIT_TESTS_PATH": "/opt/yaxunit/tests",
        "YAXUNIT_BUILD_TIMEOUT": "180000",
        "YAXUNIT_TEST_TIMEOUT": "300000",
        "YAXUNIT_LOG_LEVEL": "WARN",
        "YAXUNIT_AUTO_DETECT": "true"
      }
    }
  }
} 